---
import { Tags, Clock } from "tabler-icons-react";

import type { Post } from "@type/post";
import type { MDXInstance } from "astro";

type Props = { post: MDXInstance<Post> };

const { post } = Astro.props;

const {
  frontmatter: { slug, title, date, tags },
} = post;
---

<article>
  <figure>
    <a href={`/post/${slug}`}>
      <img src={"/contents/make-blog-with-astro/thumbnail.jpg"} alt="" />
    </a>
  </figure>
  <div class="tags">
    <Tags size={"1.2rem"} />
    <ul>
      {
        tags.map((tag) => (
          <li>
            <a href={`/`}>{tag}</a>
          </li>
        ))
      }
    </ul>
  </div>
  <h3>
    <a href={`/post/${slug}`}>{title}</a>
  </h3>
  <p class="capitalize">
    <Clock size={"1rem"} />
    <time datetime={date}>{date}</time>
  </p>
</article>

<style lang="scss">
  article {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    @media only screen and (max-width: 37.5rem) {
      gap: 0.2rem;
    }
  }
  figure {
    margin-bottom: 0.2rem;
    img {
      width: 100%;
      aspect-ratio: 3 / 2;
      object-fit: cover;
      border-radius: 2px;
      box-shadow: 0 15px 18px -15px rgb(32 32 37 / 25%);
      &:hover {
        filter: brightness(0.8);
      }
    }
  }
  .tags {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    ul {
      display: flex;
      gap: 0.5rem;
      font-size: 0.875rem;
      @media only screen and (max-width: 37.5rem) {
        font-size: 0.875rem;
      }
    }
    a {
      color: #9ca3af;
      &:hover {
        color: #3b82f6;
      }
    }
  }
  h3 {
    a {
      font-size: 1.4rem;
      overflow: hidden;
      display: -webkit-box;
      -webkit-box-orient: vertical;
      -webkit-line-clamp: 2;
      @media only screen and (max-width: 37.5rem) {
        font-size: 1.2rem;
      }
    }
    &:hover {
      text-decoration: underline 2px;
      text-underline-offset: 2px;
    }
  }
  .capitalize {
    display: flex;
    justify-content: flex-end;
    align-items: center;
    gap: 0.2rem;
    font-size: 0.75rem;
    margin-top: auto;

    @media only screen and (max-width: 37.5rem) {
      font-size: 0.625rem;
    }
  }
</style>
